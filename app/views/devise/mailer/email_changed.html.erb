<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="alert alert-info mt-5" role="alert">
        <h4 class="alert-heading">Hello <%= @email %>!</h4>
        <% if @resource.try(:unconfirmed_email?) %>
          <p class="mb-0">We're contacting you to notify you that your email is being changed to <%= @resource.unconfirmed_email %>.</p>
        <% else %>
          <p class="mb-0">We're contacting you to notify you that your email has been changed to <%= @resource.email %>.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
