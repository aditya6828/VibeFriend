<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="alert alert-success mt-5" role="alert">
        <h4 class="alert-heading">Welcome <%= @email %>!</h4>
        <p class="mb-0">You can confirm your account email through the link below:</p>
        <p class="mb-0"><%= link_to 'Confirm my account', confirmation_url(@resource, confirmation_token: @token), class: 'btn btn-primary' %></p>
      </div>
    </div>
  </div>
</div>
