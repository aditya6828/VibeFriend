<%= form_with(model: @user, url: create_image_path, method: :post, local: true, multipart: true) do |form| %>
  <div class="mb-3">
    <%= form.label :file, class: "form-label" %>
    <%= form.file_field :file, class: "form-control", multiple: true %>
  </div>
  <div class="mb-3">
    <%= form.label :caption, class: "form-label" %>
    <%= form.text_area :caption, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.submit "Upload Image", class: "btn btn-primary" %>
  </div>
<% end %>

