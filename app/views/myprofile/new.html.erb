<h1> Profile </h1>

<%= form_with(model: @my_profile, url: profile_path, local: true) do |form| %>
    <div class= "field">
        <%= form.label :fname %>
        <%= form.text_field :name, required: true %>
    </div>

    <div class="field">
        <%= form.label :user_name %>
        <%= form.text_field :user_name %>
    </div>
    <div class="field">
        <%= form.label :age %>
        <%= form.text_field :age %>
    </div>
    <div class="field">
        <%= form.label :birthdate %>
        <%= form.date_field :birthdate %>
    </div>
    <div class="field">
        <%= form.label :gender %>
        <%= form.text_field :gender %>
    </div>
    <div class="field">
        <%= form.label :bio %>
        <%= form.text_field :bio %>
    </div>
    <div class="field">
        <%= form.label :mobile %>
        <%= form.text_field :mobile %>
    </div>
    <div class="field">
        <%= form.label :address %>
        <%= form.text_field :addresss %>
    </div>
    <div class="actions">
      <%= form.submit "Create User Detail", class: "green-button-style" %>
    </div>
<% end %>